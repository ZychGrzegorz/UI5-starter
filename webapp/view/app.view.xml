<mvc:View controllerName="sap.ui.demo/walkthrough.controller.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <!-- controllerName - reference to Controller -->
    <Button text="teeeeext {i18n>showHelloButtonText}" press=".onShowHello" />
    <!-- realtime changing. Connection value with oData (database) -->
    <Input value="{/recipient/name}" description="Hello {/recipient/name}" valueLiveUpdate='true' width='60%' />
</mvc:View>
